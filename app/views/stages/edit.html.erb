<% flashed_errors(:stage) %>

<% form_for(:stage, :url => project_stage_path(@project, @stage), :html => { :method => :put }) do |f| %>
  
  <%= render(:partial => 'form' ) %>
  
  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Back to stage', project_stage_path(@project, @stage) %>

<% content_for(:breadcrumb) do %>
  <% breadcrumb_box do %>
    <%= link_to "Back to stage", project_stage_path(current_project, current_stage), :style => "float:right", :class => "arrow_link" %>
    <span class="h2_light">Project</span> <%= link_to current_project.name, project_path(current_project) %>
    <span class="h2_light"> Stage</span> <%= link_to current_stage.name, project_stage_path(current_project, current_stage) %> 
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "Edit project #{h(current_project.name)}" %>
  <h2>Edit <%= link_to h(current_stage.name), project_stage_path(current_project, current_stage) %></h2>
<% end %>
