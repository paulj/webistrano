<h2>Stage: <%=h @stage.name %> (of project <%= link_to current_project.name, project_path(current_project) %>) </h2>

<fieldset class="fieldset">
  <legend>All Tasks</legend>
    <table>
    <% @tasks.sort{|a, b| a[:name] <=> b[:name]}.each do |task| %>
	<tr>
   	<td valign="top"><%= link_to task[:name], new_project_stage_deployment_path(current_project, @stage) + "?task=#{task[:name]}", :class => 'arrow_link', :name => h(task[:name])%></td>
   	<td>&nbsp;&nbsp;</td>
	  <td valign="top"><%= simple_format task[:description] %></td>
	</tr>
    <% end %>
    </table>

</fieldset>

<br />
<%= link_to 'Back', project_stage_path(@project, @stage), :class => 'arrow_link'  %>